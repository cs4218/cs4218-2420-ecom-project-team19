    "@testing-library/react-hooks": "^7.0.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.12.12",
    "babel-jest": "^29.7.0",
    "cross-env": "^7.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^26.0.0",
    "mongodb-memory-server": "^10.1.4",
    "mongoose": "^8.12.1",
    "sonarqube-scanner": "^3.3.0",
    "supertest": "^7.1.0",
    "node-mocks-http": "^1.16.2"
  },
  "jest": {
    "setupFiles": [
      "dotenv/config"
    ]
